<style type="text/css">
  body{
    padding-bottom: 0;
  }
  #layout{
    height:85%;
  }
</style>
<script src="js/mancheck.js"></script>
<div id='layout' >
    <div class='col-md-2 col-md-offset-1 full-height'>
        <div class='full-height full-width'>
            <img class="img-circle pure-image own-avatar" height="50" width="50" src='<%-user.avatarUrl %>'>
            <div id='user-title' class='title'>
                <%-user.nickname %>
                <div class="dropdown pull-right">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown"  style='background:transparent;border:transparent'>
                  <span class="caret"  style='color:white;'></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/logout">退出</a></li>
                </ul>
            </div>
            </div>

            <div id='user-list' class='scrollable' >

            </div>
        </div>
    </div>   

    <div id='order-panel' class='col-md-8 full-height'>
        <div class='title' id="check-title">              
    体检单

  </div>
  <div id='checklist' class='full-height scrollable pure-form'>
    </div>
</div>
<script type="text/template" id="user-tpl">   
    <div class="item">
        <a href="#" class='switch-btn' id="peer-{=peerId}">
          <img class="img-circle avatar"  height="40" width="40" 
          src={= typeof(avatar) !== 'undefined' ? avatar.url : 'img/user1.png'}>
          <span class='name'>{=nickname}</span>
      </a>
      </div>
</script>

<script type="text/template" id="checklist-tpl">
<div class='title' id="check-title">              
    体检单

  </div>
  <div id='checklist' class='full-height scrollable pure-form'>
    <fieldset id = 'checkitem'>
    </fieldset>
      <button class="upd btn btn-warning center" style='margin-top:20px;'><i class="fa fa-floppy-o white"/>更新体检单</button>
  </div>
</script>

<script type="text/template" id="item-tpl">
  <label>名称</label>
  <input type='text' name='name' value='{=name || "null"}'>
  <label>状态</label>

  <input type="checkbox" name="status" value="{=checked}" {=checked ? "checked" : ""} >

  <button class='btn btn-default btn-remove'><i class="fa fa-trash"></i></button>
</script>
